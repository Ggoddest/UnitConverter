<Window x:Class="UnitConverter.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Сообщение" Height="Auto" Width="400"
        FontFamily="Segoe UI" FontSize="14" Background="#EDF7FF"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        SizeToContent="Height"
        Icon="/app_icon2.ico">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Содержимое сообщения -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Иконка слева -->
            <TextBlock x:Name="IconTextBlock" Grid.Column="0" 
                       FontSize="20" VerticalAlignment="Top" Margin="0,3,0,0"/>
            
            <!-- Текст сообщения -->
            <TextBlock x:Name="MessageTextBlock" Grid.Column="1" 
                       FontSize="14" Foreground="#2D3748" 
                       Margin="10,0,0,0" TextWrapping="Wrap"
                       MaxHeight="200" VerticalAlignment="Top"/>
        </Grid>

        <!-- Кнопка ОК -->
        <Button x:Name="OkButton" Content="OK" Grid.Row="1"
                Width="80" Height="30"
                Background="#3182CE" Foreground="White"
                FontWeight="Medium" BorderThickness="0"
                HorizontalAlignment="Right"
                Margin="0,20,0,0"
                Click="OkButton_Click"/>
    </Grid>
</Window>