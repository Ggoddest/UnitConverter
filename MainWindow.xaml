<Window x:Class="UnitConverter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Конвертер физических величин" Height="650" Width="750"
        FontFamily="Segoe UI" FontSize="14" Background="#EDF7FF"
        Icon="app_icon2.ico"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style TargetType="{x:Type Button}" x:Key="CaptionButtonStyle">
            <Setter Property="Width" Value="44"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="#5A86B3"/>
            <Setter Property="FontSize" Value="14"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E6F1FA"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок страницы -->
        <TextBlock Text="Конвертер физических величин" 
                   FontSize="24" FontWeight="SemiBold"
                   Foreground="#2D3748"
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,25" Grid.Row="0"/>

        <!-- Категория -->
        <TextBlock Text="Категория:" 
                   Foreground="#5A86B3" 
                   Margin="0,0,0,8" Grid.Row="1"/>
        <ComboBox x:Name="CategoryComboBox" Grid.Row="2"
                  SelectionChanged="CategoryComboBox_SelectionChanged"
                  MinWidth="400" Height="36"
                  Padding="10,8"
                  FontSize="14"
                  BorderBrush="#B3E0FF"
                  Background="White"
                  BorderThickness="1"/>

        <!-- Из -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,20,0,0">
            <TextBlock Text="Из:" 
                       VerticalAlignment="Center" 
                       Foreground="#5A86B3"
                       Width="40"/>
            <ComboBox x:Name="FromUnitComboBox" 
                      Width="250" 
                      Height="36"
                      Padding="10,8"
                      FontSize="14"
                      DisplayMemberPath="Name"
                      BorderBrush="#B3E0FF"
                      Background="White"
                      BorderThickness="1"
                      Margin="0,0,20,0"/>
            <TextBox x:Name="InputValueTextBox"
                     Width="180"
                     Height="36"
                     Padding="10,8"
                     FontSize="14"
                     BorderBrush="#B3E0FF"
                     Background="White"
                     BorderThickness="1"
                     KeyDown="InputValueTextBox_KeyDown"/>
        </StackPanel>

        <!-- В -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="0,15,0,0">
            <TextBlock Text="В:" 
                       VerticalAlignment="Center" 
                       Foreground="#5A86B3"
                       Width="40"/>
            <ComboBox x:Name="ToUnitComboBox" 
                      Width="250" 
                      Height="36"
                      Padding="10,8"
                      FontSize="14"
                      DisplayMemberPath="Name"
                      BorderBrush="#B3E0FF"
                      Background="White"
                      BorderThickness="1"
                      Margin="0,0,20,0"/>
            <Button Content="Конвертировать" 
                    Click="ConvertButton_Click"
                    Width="180"
                    Height="36"
                    Background="#3182CE"
                    Foreground="White"
                    FontSize="14"
                    FontWeight="Medium"
                    BorderThickness="0"/>
        </StackPanel>

        <!-- Кнопка "Все конвертации" -->
        <Button Grid.Row="5" 
                Content="Показать все конвертации" 
                Click="ConvertAllButton_Click"
                Width="220"
                Height="36"
                HorizontalAlignment="Left"
                Margin="0,20,0,15"
                Background="#E6F1FA"
                Foreground="#3182CE"
                FontSize="14"
                BorderBrush="#B3E0FF"
                BorderThickness="1"/>

        <!-- Результаты -->
        <TextBox x:Name="ResultsTextBox" Grid.Row="6"
                 IsReadOnly="True"
                 TextWrapping="NoWrap"
                 VerticalScrollBarVisibility="Auto"
                 AcceptsReturn="True"
                 FontFamily="Consolas"
                 FontSize="14"
                 Background="White"
                 BorderBrush="#B3E0FF"
                 BorderThickness="1"
                 Padding="12"/>
    </Grid>
</Window>